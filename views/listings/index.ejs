<% layout("/layouts/boilerplate") %>

<link rel="stylesheet" href="style.css">

  <div id="filters">
    <div class="filter">
      <div><i class="fa-solid fa-bed"></i></div>
      <p>Rooms</p>
    </div>
    <div class="filter">
      <div><i class="fa-solid fa-tents"></i></div>
      <p>Camping</p>
    </div>
    <div class="filter">
      <div><i class="fa-solid fa-building"></i></div>
      <p>Cities</p>
    </div>
    <div class="filter">
      <div><i class="fa-solid fa-person-swimming"></i></div>
      <p>Pools</p>
    </div>
    <div class="filter">
      <div><i class="fa-solid fa-umbrella-beach"></i></div>
      <p>Beaches</p>
    </div>
    <div class="filter">
      <div><i class="fa-solid fa-water"></i></div>
      <p>Lake-front</p>
    </div>
    <div class="filter">
      <div><i class="fa-regular fa-snowflake"></i></div>
      <p>Arctic</p>
    </div>
    <div class="tax-toggle">
      <div class="form-check-reverse form-switch">
        <input class="form-check-input" type="checkbox" role="switch" id="flexSwitchCheckDefault">
        <label class="form-check-label" for="flexSwitchCheckDefault">With taxes</label>
      </div>
    </div>
  </div>


  <div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1 ">
    <% for(let listing of allListings){ %>
      <a href="/listings/<%= listing._id %>" class="listing-link">
        <div class="card col listing-card">
          <img class="card-img-top" src="<%= listing.image.url %>" alt="listing_image" style="height: 20rem;" />
          <div class="card-body">
            <p class="card-text">
              <b>
                <%= listing.title %>
              </b> <br>
              &#8377; <%= listing.price.toLocaleString("en-IN") %> / night<i class="tax-info"> &nbsp; + 18% GST</i>
            </p>
          </div>
        </div>
      </a>
      <% }%>
  </div>

<script src="/js/script.js"></script>